---
interface Props {
	title: string;
	body: string;
	img: string;
	href: string;
}

const { img, alt, title, body, href, linkText } = Astro.props;

import Link from './Link.astro';
---

<li class="card">
    <img src={img} alt={alt}/>
    <div class="cardBody">
        <h1>{title}</h1>
        <p>{body}</p>
        <Link
            href={href}
            text={linkText}
            isReversed=true
            isAbsolute=true
            target="_blank"
        />
    </div>
</li>
<style>
    .card {
        position: relative;
        margin: 1rem;
        display: flex;
        flex-direction: column;
        word-wrap: break-word;
        background-color: #474554;
        width: 100%;
        max-width: 300px;
        min-width: 250px;
        height: 500px;
        min-height: 440px;
        max-height: 500px;
        border: 1px solid #ACA9BB;
        border-radius: 20px;
        overflow: hidden;
        transition: 0.3s;
        box-shadow: 0 0 30px rgba(1, 1, 1, 0.3);
    }
	img {
        width: 100%;
        height: 45%;
        object-fit: cover;
    }
    .cardBody {
        padding: 1rem;
        height: 55%;
        display: grid;
        grid-template-rows: 0fr 0fr 1fr;
    }
    h1 {
        margin: 0;
    }
</style>
