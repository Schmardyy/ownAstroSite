---
import Layout from '../layouts/Layout.astro';
import Link from '../components/Link.astro';
import Header from '../components/Header.astro';
import Card from '../components/Card.astro';
---

<Layout title="Jannik Sohn Projekte">
    <Header
            href="/"
            img="logo.svg"
    />
    <ul class="cards">
        <Card
                img="/images/bootstrap.png"
                alt="Thumbnail der eigenen Bootstrap Seite"
                title="Eigenes Bootstrap"
                body="Auf dieser Seite habe ich ein paar Bootstrap Komponenten nachgebaut."
                href="https://janniksohn.de/ownBootstrap/"
                linkText="Mehr Infos"
        />
        <Card
                img="/images/tictactoe.png"
                alt="Thumbnail der eigenen TicTacToe Seite"
                title="TicTacToe"
                body="Ein TicTacToe Spiel, in einem modernen Design gegen einen Bot (noch nicht fertig...)"
                href="https://janniksohn.de/tikTakToe/"
                linkText="Mehr Infos"
        />
        <Card
                img="/images/javascript.png"
                alt="Thumbnail der eigenen komplett mit JavaScript generierten Seite"
                title="Komplett Javascript"
                body="In diesem Projekt, hab ich eine Seite nur mit JS und keinem HTML Element gebaut."
                href="https://janniksohn.de/jsBasicsProject/"
                linkText="Mehr Infos"
        />
    </ul>
</Layout>

<style>
    .cards {
        margin: 0;
        height: calc(100% - 120px);
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        flex-wrap: wrap-reverse;
    }
</style>
